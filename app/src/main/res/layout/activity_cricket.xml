<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photography"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_app.cricket"
    >

    <TextView
        android:id="@+id/head"
        android:layout_width="241dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="160dp"
        android:backgroundTint="#94000000"
        android:text="@string/cricket"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="160dp" />

    <Button
        android:id="@+id/infobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="39dp"
        android:backgroundTint="#1f2240"
        android:text="Info"
        android:textSize="9dp"
        app:layout_constraintEnd_toStartOf="@+id/activitybtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"
        android:layout_marginRight="39dp" />

    <Button
        android:id="@+id/activitybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"

        android:layout_marginTop="28dp"
        android:text="TOURNAMENTS"
        android:textSize="9dp"
        app:layout_constraintStart_toEndOf="@+id/infobtn"
        app:layout_constraintTop_toBottomOf="@+id/head"
        android:backgroundTint="#1f2240"
        android:layout_marginLeft="12dp" />

    <Button
        android:id="@+id/joinbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"

        android:backgroundTint="#1f2240"
        android:text="JOIN"
        android:textSize="9dp"
        app:layout_constraintStart_toEndOf="@+id/activitybtn"
        tools:layout_editor_absoluteY="79dp"
        android:layout_marginLeft="12dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/upcoming_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="#1f2240"
        android:text="UPCOMING"
        android:textSize="8.6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toEndOf="@+id/joinbtn"
        tools:layout_editor_absoluteY="79dp"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="723dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/infobtn"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="false"
                android:background="#6a73c4"
                app:srcCompat="@drawable/cricketimage" />

            <TextView
                android:id="@+id/description1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6a73c4"
                android:text="Cricket is a bat-and-ball game played between two teams of eleven players each on a field at the centre of which is a 22-yard (20-metre) pitch with a wicket at each end, each comprising two bails balanced on three stumps. The game proceeds when a player on the fielding team, called the bowler, bowls (propels) the ball from one end of the pitch towards the wicket at the other end, with an over being completed once they have legally done so six times. "
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="false"
                android:background="#6a73c4"
                app:srcCompat="@drawable/cricketimage" />


            <TextView
                android:id="@+id/description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6a73c4"
                android:text="Cricket is a bat-and-ball game played between two teams of eleven players each on a field at the centre of which is a 22-yard (20-metre) pitch with a wicket at each end, each comprising two bails balanced on three stumps. The game proceeds when a player on the fielding team, called the bowler, bowls (propels) the ball from one end of the pitch towards the wicket at the other end, with an over being completed once they have legally done so six times. "
                android:textColor="#000000" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="false"
                android:background="#6a73c4"
                app:srcCompat="@drawable/cricketimage" />

            <TextView
                android:id="@+id/description3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#6a73c4"
                android:text="Cricket is a bat-and-ball game played between two teams of eleven players each on a field at the centre of which is a 22-yard (20-metre) pitch with a wicket at each end, each comprising two bails balanced on three stumps. The game proceeds when a player on the fielding team, called the bowler, bowls (propels) the ball from one end of the pitch towards the wicket at the other end, with an over being completed once they have legally done so six times. "
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>